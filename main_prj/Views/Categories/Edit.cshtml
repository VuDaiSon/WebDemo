@model main_prj.Models.CategoryModificationModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #preview {
        width: 360px;
        height: 240px;
        border: 1px solid black;
        margin-top: 5px;
    }
</style>
<h1>Sửa</h1>

<h4>Danh mục</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.Category.CategoryId" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.CategoryId" />
            <div class="form-group">
                <label asp-for="Category.CategoryName" class="control-label">Tên danh mục</label>
                <input asp-for="Category.CategoryName" class="form-control" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ảnh xem trước (cũ)</label> <br />
                <img src="/ProductImages/CategoryImages/@Model.Category.CategoryId/@Model.Category.CategoryImage"
                     style="margin:5px; max-height:360px; max-width:240px" />
            </div>
            <div class="form-group">
                <label asp-for="imageFile" class="control-label">Ảnh xem trước (mới)</label>
                <input asp-for="imageFile" class="form-control" type="file" />
                <img id="preview" src="#" alt=""/>
                <span asp-validation-for="imageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/js/category/edit.js"></script>
}
