    <!-- Form Handling Scripts-->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
    
            document.getElementById('btn-submit').addEventListener('click', function () {
                // Retrieve values
                var buyerName = document.getElementById('buyer-name').value.trim();
                var buyerEmail = document.getElementById('buyer-email').value.trim();
                var buyerAddress = document.getElementById('buyer-address').value.trim();
                var buyerNumber = document.getElementById('buyer-number').value.trim();
                var paymentRadios = document.querySelectorAll('[name="payment"]');    
                console.log(paymentRadios);
                var paymentMethod = '';

                document.getElementById('buyer-number-validate').innerText = "";
                document.getElementById('buyer-name-validate').innerText = "";
                document.getElementById('buyer-address-validate').innerText = "";
                document.getElementById('buyer-email-validate').innerText = "";
                document.getElementById('payment-validate').innerText = "";

                // Values validation
                var validationData = [
                    { field: 'buyer-name', value: buyerName, errMsg: 'Vui lòng nhập tên' },
                    { field: 'buyer-email', value: buyerEmail, errMsg: 'Vui lòng nhập email' },
                    { field: 'buyer-number', value: buyerNumber, errMsg: 'Vui lòng nhập số điện thoại' },
                    { field: 'buyer-address', value: buyerAddress, errMsg: 'Vui lòng nhập địa chỉ' }
                ];

                var DataIsValid = true;
                for (var i = 0; i < validationData.length; i++) {
                    var data = validationData[i];
                    if (data.value == "") {
                        document.getElementById(data.field + '-validate').innerText = data.errMsg;
                        document.getElementById(data.field).focus();
                        DataIsValid = false;
                        break; 
                    }
                }

                var paymentSelected = false;
                for (var i = 0; i < paymentRadios.length; i++) {
                    if (paymentRadios[i].checked) {
                        paymentSelected = true;
                        paymentMethod = paymentRadios[i].value.trim();                       
                        break;
                    }
                }

                if (!paymentSelected) {
                    document.getElementById("payment-validate").innerText = "Vui lòng chọn phương thức thanh toán";
                } else {
                    if (DataIsValid) {
                        var clientTime = new Date();

                        var data = {
                            userId: "@Model.User.UserId",
                            receiver: buyerName,
                            orderDate: clientTime.toISOString(),
                            totalValue: "@Model.Total()",
                            cartId: "@Model.Cart.CartId",
                            address: buyerAddress,
                            shippingFee: "@Model.ShippingFee",
                            contactNumber: buyerNumber,
                            paymentMethod: paymentMethod
                        };
                        console.log(data);

                        fetch ("/Orders/ConfirmOrder", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json"
                            },
                            body: JSON.stringify(data)
                        })
                        .then (function(response) {
                            if (response.ok) {
                                alert("Đặt hàng thành công");
                            }
                            else {
                                throw new Error("Error sending data to the controller")
                            }
                        })
                    }
                }                                          
            })        
        });
    </script>  
