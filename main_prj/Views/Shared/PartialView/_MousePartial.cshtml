@model main_prj.Models.Mouse;

<html lang="vi">
<head>
	<meta charset="utf-8" />
	<title>Table Style</title>
	<meta name="viewport" content="initial-scale=1.0; maximum-scale=1.0; width=device-width;">
	<link href="/css/DetailPartial.css" rel="stylesheet" />

</head>

<body>

	<table class="table-fill">
		<tbody class="table-hover">
			<tr>
				<td class="text-left">Hãng sản xuất</td>
				<td class="text-left">@Model.Brand</td>
			</tr>
			<tr>
				<td class="text-left">Mẫu sản phẩm</td>
				<td class="text-left">@Model.Model</td>
			</tr>
			<tr>
				<td class="text-left">Kiểu kết nối</td>
				<td class="text-left">@Model.ConnectionType</td>
			</tr>
			<tr>
				<td class="text-left">Pin</td>
				<td class="text-left">@Model.Battery</td>
			</tr>
			<tr>
				<td class="text-left">Độ phân giải</td>
				<td class="text-left">@Model.Resolution dpi</td>
			</tr>
			<tr>
				<td class="text-left">Khối lượng</td>
				<td class="text-left">@Model.Weight g</td>
			</tr>
		</tbody>
	</table>


</body>
</html>